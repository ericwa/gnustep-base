	* Headers/Foundation/NSURLDownload.h:
	* Headers/Foundation/NSKeyValueObserving.h:
	* Headers/Foundation/NSURLRequest.h:
	* Headers/Foundation/NSURLCredentialStorage.h:
	* Headers/Foundation/NSInvocation.h:
