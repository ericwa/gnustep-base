../config.status:
	cd ..; $(SHELL) configure --no-create

TAGS: $(DIST_FILES)
	etags $(DIST_FILES)

AUTHORS: Makefile.in
	rm -f AUTHORS
	@echo Finding file authors...
	@echo 'For the legal record, here is a list of who wrote what:'>AUTHORS
	@for a in $(FILE_AUTHORS) \
	; do \
		echo >>AUTHORS; \
		echo >>AUTHORS; \
		echo "$${a}:" >>AUTHORS; \
		egrep -l "((Written by)|(Author)).*$${a}" \
			$(DIST_FILES) >>AUTHORS; \
	done

mostlyclean:
	rm -f  core \
	*~ \
	objects/*~ \
	Foundation/*~ \
	objc/*~
clean: mostlyclean
	rm -f libobjects$(LIBEXT) *$(OEXT)
	rm -f $(NSVALUE_MFILES) $(NSNUMBER_MFILES)
	rm -f $(GNU_BASICS_CFILES) $(GNU_CALLBACKS_CFILES)
	rm -f $(GNU_BASICS_HFILES) $(GNU_CALLBACKS_HFILES)
