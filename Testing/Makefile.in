	$(LINK_CMD)
test10: test10.o $(srcdir)/../libobjects.a
	$(LINK_CMD)
test11: test11.o $(srcdir)/../libobjects.a
	$(LINK_CMD)
test12: test12.o $(srcdir)/../libobjects.a
