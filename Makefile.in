AUTHORS: Makefile.in
	rm -f AUTHORS
	@echo Finding file authors...
	@echo 'For the legal record, here is a list of who wrote what:'>AUTHORS
	@for a in $(FILE_AUTHORS) \
	; do \
		echo "\n\n$${a}:\n" >>AUTHORS; \
		egrep -l "((Written by)|(Author)).*$${a}" \
			$(DIST_FILES) >>AUTHORS; \
	done

